BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            size_hint: (0.4, 1)
        Button:
            text: 'Square'
            on_press: app.handle_calculate(root.ids.input_number.text)
            size_hint: (0.3, 1)
        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)
            size_hint: (0.3, 1)
    Label:
        text: 'Enter a number and press "Square"'
        size_hint: (1, 0.3)
